<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">
	<root>
	   <priority value ="INFO" />
 	   <appender-ref ref="stdout" />
	</root>
    
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %p %C{1}.%M(%L) | %m%n" />
    	</layout>	    
	</appender>
	
        <!-- 用户模块落日志 -->
    <appender name="userReqFile" class="org.apache.log4j.TimeRollingFileAppender">
    	<param name="File"   value="${catalina.base}/logs/userreq.log" />
    	<param name="DatePattern" value="'.'yyyy-MM" />    	
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %p %C{1}.%M(%L) | %m%n" />
    	</layout>	    
	</appender>
	<category name="userreq" additivity="false">
    	<priority value="INFO" />
    	<appender-ref ref="userReqFile" />
    </category>
    <appender name="userSqlFile" class="org.apache.log4j.TimeRollingFileAppender">
    	<param name="File"   value="${catalina.base}/logs/usersql.log" />
    	<param name="DatePattern" value="'.'yyyy-MM" />    	
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss} %p %C{1}.%M(%L) | %m%n" />
    	</layout>	    
	</appender>
	<category name="usersql" additivity="false">
    	<priority value="INFO" />
    	<appender-ref ref="userSqlFile" />
    </category>
	<!-- end -->
    
</log4j:configuration>
