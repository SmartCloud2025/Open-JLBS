<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:amq="http://activemq.apache.org/schema/core" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd   
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
		
	<!-- 队列-->
	<bean id="uidQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg index="0" value="uidQueue"/>
	</bean>
	<bean id="deviceIdQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg index="0" value="deviceIdQueue"/>
	</bean>
	<bean id="checkinQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg index="0" value="checkinQueue"/>
	</bean>
<!-- 	<bean id="poiRemoveQueue" class="org.apache.activemq.command.ActiveMQQueue"> -->
<!-- 		<constructor-arg index="0" value="poiRemoveQueue"/> -->
<!-- 	</bean> -->
<!-- 	<bean id="relationSyncQueue" class="org.apache.activemq.command.ActiveMQQueue"> -->
<!-- 		<constructor-arg index="0" value="relationSyncQueue"/> -->
<!-- 	</bean> -->

	<bean id="syncLocationMessageListener" class="com.lanx.app.lbs.location.jms.SyncLocationMessageListener" />
	<bean id="userCheckinListener" class="com.xiaonei.wap.yoyo.jms.UserCheckinListener" destroy-method="shutdown" />

	<!-- POI同步 -->
	<bean
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="destination" ref="uidQueue" />
		<property name="messageListener" ref="syncLocationMessageListener" />
		<property name="concurrentConsumers" value="${jms.concurrentConsumers.default}" />
		<property name="autoStartup" value="true" />
	</bean>

	<!-- POI Checkin -->
	<bean
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="destination" ref="checkinQueue" />
		<property name="messageListener" ref="userCheckinListener" />
		<property name="concurrentConsumers" value="${jms.concurrentConsumers.checkin}" />
		<property name="autoStartup" value="true" />
	</bean>
	
 </beans>
